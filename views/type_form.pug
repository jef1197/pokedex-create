extends layout 

block content 
  h1= title 

  form(method='POST' action='')
    div
      label(for='name') Type: 
      input#name(type='text', placeholder='fire, water, grass' name='name' value=(undefined===typing  ? '' : typing.name), required='true' )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg

