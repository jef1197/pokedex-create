extends layout 

block content 
  h1 #{pokemon.name}

  div 
    for pokeType in  pokemon.type
      a(href=pokeType.url) #{pokeType.name} 
    //-   a(href=pokemon.type[1].url) #{pokemon.type[1].name} 
    //- else 
    //-   a(href=pokemon.type[0].url) #{pokemon.type[0].name}
    
  div 
    p #{pokemon.description}
    p #{pokemon.gen.name}
    p Height: #{pokemon.height} cm 
    p Weight: #{pokemon.weight} kg

  hr
  p
    a(href=pokemon.url+'/delete') Delete Pokemon
  p
    a(href=pokemon.url+'/update') Update Pokemon