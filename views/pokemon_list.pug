extends layout 

block content 
  h1= title 

  ul 
    each pokemon in list 
      li 
        a(href=pokemon.url) #{pokemon.name} 
        if pokemon.type.length > 1
          a(href=pokemon.type[0].url) #{pokemon.type[0].name} 
          a(href=pokemon.type[1].url) #{pokemon.type[1].name}
        else
          a(href=pokemon.type[0].url) #{pokemon.type[0].name}
        

    else 
      li There are no books.