extends layout 

block content 
  h1= title 

  form(method='POST' action='')
    div(class='form-content')
      label(for='name') Generation: 
      input#name(type='text', placeholder='1st, 2nd, 3rd' name='name' value=(undefined===gen ? '' : gen.name), required='true' )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg

